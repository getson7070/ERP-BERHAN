+from flask import Blueprint, jsonify
+from sqlalchemy import text
+
+from erp.db import get_engine
+
+bp = Blueprint("health", __name__)
+
+
+@bp.get("/healthz")
+def healthz():
+    """
+    Basic liveness/readiness endpoint used by Docker, Render, and CI.
+
+    - Returns 200 and {"status":"ok","db":true} when the DB is reachable.
+    - Returns 500 and {"status":"error","db":false} on DB connectivity issues.
+    """
+    try:
+        engine = get_engine()
+        with engine.connect() as conn:
+            conn.execute(text("SELECT 1"))
+    except Exception:
+        return jsonify(status="error", db=False), 500
+
+    return jsonify(status="ok", db=True), 200
+

