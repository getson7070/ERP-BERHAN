# === Common ===
APP_ENV=development
FLASK_ENV=production
FLASK_DEBUG=0

# === Secrets (place in real env/secret manager; this is only a placeholder) ===
SECRET_KEY=change_me
JWT_SECRET=change_me
CSRF_SECRET=change_me

# === Data stores ===
DATABASE_URL=postgresql+psycopg2://user:pass@localhost:5432/erp_berhan
REDIS_URL=redis://localhost:6379/0

# === Security / Proxy ===
SECURE_PROXY_SSL_HEADER=X-Forwarded-Proto,https

# === Rate limiting ===
RATELIMIT_DEFAULT=100/minute
RATELIMIT_STORAGE_URI=redis://localhost:6379/1

# === Deploy hooks (do NOT commit real URLs) ===
DEPLOY_HOOK_URL=https://api.render.com/deploy/REDACTED

# === Integrations ===
TELEGRAM_BOT_TOKEN=REDACTED
NETLIFY_SITE_ID=REDACTED
NETLIFY_AUTH_TOKEN=REDACTED
