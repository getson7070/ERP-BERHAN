# === ERP-BERHAN Local Dev ===
SECRET_KEY=change-me-to-a-long-random-string
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://erp:erp@erp-db:5432/erp

# Parameterize host port to avoid Windows conflicts on :8000
HOST_PORT=8010

# Auto-discovery ON for dev to surface import/url_prefix issues quickly
ERP_AUTO_REGISTER=1

# Optional per-blueprint rate limits (JSON mapping of blueprint name -> limits expression)
# Example limits expression: "10/minute;100/day"
ERP_BP_LIMITS={"auth":"10/minute;100/day","login":"10/minute;100/day"}
# Dev example (copy to .env and adapt)
FLASK_APP=erp:create_app
FLASK_ENV=development
SECRET_KEY=change-me-in-prod
JWT_SECRET_KEY=change-me-too
DATABASE_URL=sqlite:///dev.sqlite3
STRICT_CONFIG=0
