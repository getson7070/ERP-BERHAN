# === Flask App Secrets ===
FLASK_SECRET_KEY=dev-secret-key-change-me
SECURITY_PASSWORD_SALT=dev-password-salt-change-me
MFA_ISSUER=ERP-BERHAN

# === JWT Auth ===
JWT_SECRET=dev-jwt-secret-change-me
JWT_SECRETS={"1":"dev-jwt-secret-change-me"}
JWT_SECRET_ID=1

# === Database ===
DATABASE_URL=DATABASE_URL=postgresql://erp_app:pass123@localhost:5432/erp_app
APP_DB_USER=erp_app
APP_DB_PASSWORD=pass123  # ðŸ”’ You can change this to a separate app-level DB user password

# === Admin Account ===
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123  # ðŸ”’ Use strong password in production

# === Demo Data ===
SEED_DEMO_DATA=1

# === SQLAlchemy DB Pooling ===
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === Rate Limiting ===
RATE_LIMIT_DEFAULT=100 per minute

# === GraphQL Security ===
GRAPHQL_MAX_DEPTH=5
GRAPHQL_MAX_COMPLEXITY=200

# === Vault (Optional) ===
VAULT_FILE=./vault.local.json  # Use dummy or create one for dev

# === OAuth Setup (Google example) ===
OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=your-google-client-secret
OAUTH_AUTH_URL=https://accounts.google.com/o/oauth2/auth
OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH_USERINFO_URL=https://openidconnect.googleapis.com/v1/userinfo

# === Argon2 Password Hashing ===
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=512
ARGON2_PARALLELISM=2

# === Localization ===
BABEL_DEFAULT_LOCALE=en
BABEL_SUPPORTED_LOCALES=en,am

# === API Access Token (optional internal use) ===
API_TOKEN=dev-api-token-change-me

# === Optional External Integrations ===
ACCOUNTING_URL=http://localhost:8000/api  # Placeholder for local accounting API

# === S3 / File Retention ===
S3_RETENTION_DAYS=30

# === Redis / Celery ===
USE_FAKE_REDIS=1  # Use fake redis if you're not running Redis locally
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === Monitoring / Error Reporting ===
SENTRY_DSN=  # Leave blank for local

# === Data Encryption ===
ENCRYPTION_AT_REST_ENABLED=false
ENCRYPTION_KEY_PATH=./encryption_key.dev

# === Plugin / Community ===
PLUGIN_SANDBOX_ENABLED=false
SUPPORT_PORTAL_URL=https://support.example.com
COMMUNITY_FORUM_URL=https://community.example.com
