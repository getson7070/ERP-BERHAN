# Flask
FLASK_APP=wsgi
FLASK_DEBUG=1

# Secrets
FLASK_SECRET_KEY=dev-secret-key-change-me
SECURITY_PASSWORD_SALT=dev-password-salt-change-me
MFA_ISSUER=ERP-BERHAN
JWT_SECRET=dev-jwt-secret-change-me
JWT_SECRETS={"1":"dev-jwt-secret-change-me"}
JWT_SECRET_ID=1
API_TOKEN=dev-api-token-change-me

# Database (Dockerized PG exposed on localhost)
DATABASE_URL=postgresql://erp_app:pass123@localhost:5432/erp_app
APP_DB_USER=erp_app
APP_DB_PASSWORD=pass123
SEED_DEMO_DATA=1
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# DB pool (defaults are fine for local)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Caching / Celery
USE_FAKE_REDIS=1
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate limiting / GraphQL
RATE_LIMIT_DEFAULT="100 per minute"
GRAPHQL_MAX_DEPTH=5
GRAPHQL_MAX_COMPLEXITY=200

# Local vault file (you created this already)
VAULT_FILE=./vault.local.json

# OAuth (leave blank unless you wire it up)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_AUTH_URL=
OAUTH_TOKEN_URL=
OAUTH_USERINFO_URL=

# Password hashing
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=512
ARGON2_PARALLELISM=2

# i18n
BABEL_DEFAULT_LOCALE=en
BABEL_SUPPORTED_LOCALES=en,am

# Misc / optional
ACCOUNTING_URL=
S3_RETENTION_DAYS=30
SENTRY_DSN=
ENCRYPTION_AT_REST_ENABLED=false
ENCRYPTION_KEY_PATH=./encryption_key.dev
PLUGIN_SANDBOX_ENABLED=false
SUPPORT_PORTAL_URL=https://support.example.com
COMMUNITY_FORUM_URL=https://community.example.com
COST_MODEL_URL=
