# --- Flask core ---
FLASK_APP=wsgi
FLASK_DEBUG=1

# --- Secrets (dev) ---
FLASK_SECRET_KEY=dev-secret-key-change-me
SECURITY_PASSWORD_SALT=dev-password-salt-change-me
MFA_ISSUER=ERP-BERHAN
JWT_SECRET=dev-jwt-secret-change-me
JWT_SECRETS={"1":"dev-jwt-secret-change-me"}
JWT_SECRET_ID=1
API_TOKEN=dev-api-token-change-me
VAULT_FILE=./vault.local.json

# --- Database (local Docker PG) ---
# Keep these 3 in sync some configs prefer APP_DB_* over DATABASE_URL.
APP_DB_USER=erp_app
APP_DB_PASSWORD=pass123
DATABASE_URL=postgresql://erp_app:pass123@localhost:5432/erp_app
SQLALCHEMY_DATABASE_URI=postgresql://erp_app:pass123@localhost:5432/erp_app

# Optional pool tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# --- Admin seed (dev) ---
SEED_DEMO_DATA=1
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# --- Redis (local/fake ok) ---
USE_FAKE_REDIS=1
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# --- Rate limit & GraphQL guards ---
RATE_LIMIT_DEFAULT="100 per minute"
GRAPHQL_MAX_DEPTH=5
GRAPHQL_MAX_COMPLEXITY=200

# --- I18n ---
BABEL_DEFAULT_LOCALE=en
BABEL_SUPPORTED_LOCALES=en,am

# --- Optional/Integrations (leave blank for local) ---
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_AUTH_URL=
OAUTH_TOKEN_URL=
OAUTH_USERINFO_URL=
ACCOUNTING_URL=
POSTGRES_PASSWORD=pass123
BACKUP_ENCRYPTION_KEY=dev-backup-key
S3_BUCKET=
S3_ENDPOINT=
AWS_REGION=
ALERT_EMAIL=
SLACK_WEBHOOK=
SENTRY_DSN=
COST_MODEL_URL=

# --- Security/crypto (dev/off) ---
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=512
ARGON2_PARALLELISM=2
ENCRYPTION_AT_REST_ENABLED=false
ENCRYPTION_KEY_PATH=./encryption_key.dev
S3_RETENTION_DAYS=30
PLUGIN_SANDBOX_ENABLED=false

# --- Docs/links ---
SUPPORT_PORTAL_URL=https://support.example.com
COMMUNITY_FORUM_URL=https://community.example.com
